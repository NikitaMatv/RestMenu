<Page x:Class="RestWaiter.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestWaiter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill"  AlignmentY="Top" AlignmentX="Center" ImageSource="/Resources/Group6.png" />
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right"  Margin="0 -42 40 0">
            <TextBox Opacity="0.6"  Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="0 -120 0 0" VerticalContentAlignment="Center" FontSize="25" x:Name="LoginTb" Width="240" Height="40" ></TextBox>
            <PasswordBox  Opacity="0.6"  x:Name="PasswordTb" BorderBrush="Transparent" BorderThickness="0"  Margin="-50 45 0 0"  FontSize="25" Width="220" Height="40"></PasswordBox>
        </StackPanel>
        <Button Margin="350 200 0 0" FontWeight="ExtraBold" Foreground="Black" Background="White" FontSize="12" x:Name="AutorBt"  Style="{StaticResource RoundButton}" Click="AutorBt_Click" Height="40" Width="180">Войти</Button>
    </Grid>
</Page>
